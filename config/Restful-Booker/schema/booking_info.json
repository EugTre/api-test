{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "bookingid": { "type": "integer" },
        "booking": {
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "type": "object",
            "properties": {
                "firstname": { "type": "string" },
                "lastname": { "type": "string" },
                "totalprice": { "type": "integer" },
                "depositpaid": { "type": "boolean" },
                "additionalneeds": { "type": "string" },
                "bookingdates": {
                    "type": "object",
                    "properties": {
                        "checkin": {
                            "type": "string",
                            "format": "date"
                        },
                        "checkout": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    "required": ["checkin", "checkout"],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false,
            "required": [
                "firstname",
                "lastname",
                "totalprice",
                "depositpaid",
                "bookingdates",
                "additionalneeds"
            ]
        }
    },
    "required": [
        "bookingid",
        "booking"
    ],
    "additionalProperties": false
}