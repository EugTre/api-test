{
    "$defs": {
        "schema": {
            "auth": { "!include": "config/Restful-Booker/schema/auth.json" },
            "auth_bad_creds": { "!include": "config/Restful-Booker/schema/auth_bad_creds.json" },
            "booking_entry": { "!include": "config/Restful-Booker/schema/booking_entry.json" },
            "booking_info": { "!ref": "/$defs/schema/booking_entry/properties/booking" }
        },
        "headers": {
            "ok": {
                "Content-Type": "application/json; charset=utf-8"
            }
        }
    },

    "Auth": {
        "request": {
            "method": "POST",
            "path": "/auth",
            "json": {
                "username": "admin",
                "password": "password123"
            }
        },
        "response": {
            "status_code": 200,
            "schema": { "!ref": "/$defs/schema/auth" },
            "headers": { "!ref": "/$defs/headers/ok" }
        }
    },
    "Auth_BadCredentials": {
        "request": { "!ref": "/Auth/request" },
        "response": {
            "status_code": 200,
            "schema": { "!ref": "/$defs/schema/auth_bad_creds" },
            "headers": { "!ref": "/$defs/headers/ok" },
            "json": {
                "reason": "Bad credentials"
            }
        }
    },
    "Auth_BadRequest": {
        "request": {
            "method": "POST",
            "path": { "!ref": "/Auth/request/path" },
            "headers": {
                "Content-Type": "application/json"
            }
        },
        "response": {
            "status_code": 400,
            "text": "Bad Request"
        }
    },
    "Auth_UnsupportedMethod": {
        "request": {
            "method": "POST",
            "path": { "!ref": "/Auth/request/path" }
        },
        "response": {
            "status_code": 404,
            "text": "Not Found"
        }
    },

    "GetBooking": {
        "request": {
            "method": "GET",
            "path": "/booking/{id}",
            "path_params": {
                "id": 100
            }
        },
        "response": {
            "status_code": 200,
            "schema": {"!ref": "/$defs/schema/booking_info"},
            "headers": {"!ref": "/$defs/headers/ok"}
        }
    },

    "CreateBooking": {
        "request": {
            "method": "POST",
            "path": "/booking",
            "headers": { "!ref": "/$defs/headers/ok" },
            "json": {
                "!gen": "Booking",
                "!id": "Create_01"
            }
        },
        "response": {
            "status_code": 200,
            "schema": { "!ref": "/$defs/schema/booking_entry" },
            "headers": { "!ref": "/$defs/headers/ok" },
            "json": {
                "bookingid": { "!match": "AnyNumber" },
                "booking": {
                    "!gen": "Booking",
                    "!id": "Create_01"
                }
            }
        }
    },


    "UpdateBooking": {
        "request": {
            "method": "PUT",
            "path": "/booking/{id}",
            "json": {
                "!gen": "Booking",
                "!id": "Update_01"
            }
        },
        "response": {
            "status_code": 200,
            "schema": { "!ref": "/$defs/schema/booking_entry/properties/booking" },
            "json": {
                "!gen": "Booking",
                "!id": "Update_01"
            }
        }
    },

    "DeleteBooking": {
        "request": {
            "method": "DELETE",
            "path": "/booking/{id}"
        },
        "response": {
            "status_code": 201
        }
    }

}