{
    "GetUsers": {
        "comment": "Returns list of users created for test project",
        "request": {
            "method": "GET",
            "path": "/user",
            "query_params": {
                "comment": [
                    "This is example of params and it's value.",
                    "However params defined in @use section will be",
                    "automatically added to request by ApiRequestHelper"
                ],
                "created": 1,
                "page": 0,
                "limit": 20,
                "@use": [
                    "created"
                ]
            }
        },
        "response": {
            "status_code": 200,
            "schema_name": "ListOfUsers"
        }
    },
    "GetUserByID": {
        "request": {
            "method": "GET",
            "path": "/user/{user_id}"
        },
        "response": {
            "status_code": 200,
            "schema_name": "ListOfUsers"
        }
    },


    "PostCreateUser_RequiredOnly": {
        "comment": "Creates user",
        "request": {
            "method": "POST",
            "path": "/user/create",
            "headers": "config/DummyAPI/headers/headers_content_type_json.json",
            "json": "config/DummyAPI/payload/create_user_required_only.json"
        },
        "response": {
            "status_code": 200,
            "schema_name": "UserFull",
            "json": "config/DummyAPI/payload/expected_user_required_only.json"
        }

    },

    "DeleteUser": {
        "comment": "Deletes user by given id",
        "request": {
            "method": "DELETE",
            "path": "/user/{user_id}"
        },
        "response": {
            "status_code": 200,
            "schema_name": "OnUserDeleted"
        }
    }
}